@model IEnumerable<Entities.Concrete.Land>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Arazi</h1>
<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Fiyat</th>
        <th>Resim</th>
        <th>Video</th>
        <th>İlan Tarihi</th>
        <th>İlan No</th>
        <th>İlan Durumu</th>
        <th>Metrekare</th>
        <th>Emsal</th>
        <th>Template</th>
        <th>Tapu Durumu</th>
        <th>Arazi Tipi</th>
        <th>Takas</th>
        <th>Güncelle</th>
        <th>Sil</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Property.Price</td>
            <td>@item.Property.Picture</td>
            <td>@item.Property.Video</td>
            <td>@item.Property.ListingDate</td>
            <td>@item.Property.AdvertNo</td>
            <td>@item.Property.AdvertState</td>
            <td>@item.Property.Square</td>
            <td>@item.Precedent</td>
            <td>@item.Template</td>
            <td>@item.DeedStatus</td>
            <td>@item.LandType</td>
            <td>@item.ExchangeSatus</td>
            <td><a class="btn btn-primary" href="/Role/Update/@item.Id">Güncelle</a></td>
            <td><a class="btn btn-danger" href="/Role/Delete/@item.Id">Sil</a></td>
        </tr>
    }
</table>
<br />
<a href="/Land/Add/" class= "btn btn-primary">Arazi Ekle</a>


